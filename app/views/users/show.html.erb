<div>
  <h1>User info</h1>
  <%= image_tag @user.get_profile_image(100,100) %><br>
  <table>
    <tr>

      <th>name<br></th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>

  </table>
</div>

<div>
  <h1>New book</h1>

  <%= form_with model: @book, url: '/users', method: :post do |f| %>
    <h4>title</h4>
    <%= f.text_field :title %>
    <h4>body</h4>
    <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>

<div>
  <% @post_books.each do |book| %>

  <p>投稿ユーザー画像：<%= image_tag book.user.get_profile_image(100,100) %></p>
  <p>title：<%= book.title %></p>
  <p>body：<%= book.body %></p>

</div>
<% end %>
